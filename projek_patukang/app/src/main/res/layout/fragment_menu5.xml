<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.menu5.menu5Fragment">

   <androidx.cardview.widget.CardView
       android:layout_margin="8dp"
       android:layout_marginBottom="0dp"
       app:cardCornerRadius="4dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" >

      <LinearLayout
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="match_parent">

         <ImageView
             android:layout_marginTop="10dp"
             android:layout_width="100dp"
             android:layout_gravity="center_horizontal"
             android:layout_height="100dp"
             android:src="@drawable/logo"/>

         <TextView
             android:textColor="#000"
             android:layout_marginTop="20dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:fontFamily="sans-serif-thin"
             android:text="Daftar Tukang Sekarang"
             android:textSize="25sp"
             android:textStyle="bold"
             android:gravity="center"
             android:textAlignment="gravity"/>

         <TextView
             android:layout_marginTop="30dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="25dp"
             android:textSize="18sp"
             android:paddingLeft="15sp"
             android:text="Piih Kategori Tukang"/>

         <Spinner
             android:layout_marginTop="5dp"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="46dp"
             android:padding="20dp"
             android:id="@+id/sp_name"
             android:entries="@array/Keahlian"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"/>

         <com.google.android.material.textfield.TextInputLayout
             android:id="@+id/harga_tukangr"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerHorizontal="true"
             android:layout_gravity="center_horizontal"
             android:layout_marginTop="5dp"
             app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="280dp"
                android:layout_height="80dp"
                android:hint="Harga Tukang / m2"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:paddingLeft="15dp"
                android:id="@+id/txtharga_tukang"
                android:ems="10"
                android:inputType="textPhonetic"/>

         </com.google.android.material.textfield.TextInputLayout>

         <com.google.android.material.textfield.TextInputLayout
             android:id="@+id/no_rekr"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerHorizontal="true"
             android:layout_gravity="center_horizontal"
             android:layout_marginTop="5dp"
             app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="280dp"
                android:layout_height="80dp"
                android:hint="No. Rekeing Anda"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:paddingLeft="15dp"
                android:id="@+id/txtrekening"
                android:ems="10"
                android:inputType="text"/>

         </com.google.android.material.textfield.TextInputLayout>

         <TextView
             android:layout_marginLeft="50dp"
             android:layout_marginTop="10dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="foto KTP Anda"/>

         <Button
             android:layout_marginLeft="50dp"
             android:textColor="#000"
             android:text="Pilih"
             android:id="@+id/pilih_ktp"
             android:textStyle="bold"
             android:layout_width="wrap_content"
             android:layout_height="50dp"
             android:layout_marginTop="5dp"/>

         <ImageView
             android:layout_width="80dp"
             android:layout_height="50dp"
             android:layout_marginLeft="50dp"
             android:scaleType="fitXY"
             app:srcCompat="@android:drawable/ic_menu_gallery"
             android:id="@+id/imageUpload"/>

         <Button
             android:textColor="@color/white"
             android:background="@drawable/stylebutton"
             android:text="Daftar Tukang"
             android:textStyle="bold"
             android:id="@+id/daftar_tukanggg"
             android:layout_width="wrap_content"
             android:layout_height="50dp"
             android:layout_gravity="center_horizontal"
             android:layout_marginTop="20dp"
             android:layout_marginBottom="20dp"/>

      </LinearLayout>

   </androidx.cardview.widget.CardView>


</ScrollView>
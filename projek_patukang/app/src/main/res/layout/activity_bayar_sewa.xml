<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".bayar_sewa"
    android:orientation="vertical"
    android:background="@color/azur">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_margin="10dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingLeft="15dp"
                    >
                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Atas nama : "
                        android:id="@+id/txt1"
                        android:textSize="15dp" />
                    <TextView
                        android:textColor="#000"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/txt1"
                        android:id="@+id/atasnama"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_below="@id/atasnama"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alamat sewa : "
                        android:id="@+id/txt2"
                        android:textSize="15dp" />
                    <TextView
                        android:textColor="#000"
                        android:layout_below="@id/atasnama"
                        android:layout_toRightOf="@id/txt2"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/alamatsewa"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tgl Sewa : "
                        android:id="@+id/txt3"
                        android:layout_below="@id/alamatsewa"
                        android:textSize="15dp" />
                    <TextView
                        android:layout_below="@id/alamatsewa"
                        android:layout_toRightOf="@id/txt3"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tglsewa"
                        android:textColor="#000"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_below="@id/tglsewa"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Luas sewa : "
                        android:id="@+id/txt4"
                        android:textSize="15dp" />
                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:layout_below="@id/tglsewa"
                        android:layout_toRightOf="@id/txt4"
                        android:id="@+id/luassewa"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Bayar : "
                        android:id="@+id/txt5"
                        android:layout_below="@id/luassewa"
                        android:textSize="15dp" />
                    <TextView
                        android:layout_below="@id/luassewa"
                        android:layout_toRightOf="@id/txt5"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/totalsewa"
                        android:textColor="#000"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_below="@id/totalsewa"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Detail Sewa : "
                        android:id="@+id/txt6"
                        android:textSize="15dp" />
                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:id="@+id/detailsewa"
                        android:layout_below="@id/totalsewa"
                        android:layout_toRightOf="@id/txt6"
                        android:textSize="15dp"
                        android:layout_marginBottom="30dp"
                        android:textStyle="bold" />

                    </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_margin="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            app:cardCornerRadius="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textColor="@color/blue"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PEMBAYARAN"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="30dp"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pilih Rekening Transaksi : "
                    android:layout_marginLeft="50dp"/>
                <Spinner
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="46dp"
                    android:padding="20dp"
                    android:id="@+id/sp_name"
                    android:entries="@array/No_Rek"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/no_rekbayar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="280dp"
                        android:layout_height="80dp"
                        android:hint="No.Rekening Anda"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="15dp"
                        android:id="@+id/txtno_rekbayar"
                        android:ems="10"
                        android:inputType="text"/>

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Foto Bukti Pembayaran Anda"/>

                <Button
                    android:layout_marginLeft="50dp"
                    android:textColor="#000"
                    android:text="Pilih"
                    android:id="@+id/pilih_foto"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"/>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="50dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@android:drawable/ic_menu_gallery"
                    android:id="@+id/imageUpload"/>


                <Button
                    android:textColor="@color/white"
                    android:background="@drawable/stylebutton"
                    android:text="KIRIM"
                    android:textStyle="bold"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:id="@+id/btn_bayar"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>